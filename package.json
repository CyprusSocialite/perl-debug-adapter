{
  "name": "perl-debug",
  "displayName": "Perl Debug Adapter",
  "version": "0.0.3",
  "publisher": "nihilus118",
  "description": "Implementation of a Debug Adapter for Perl.",
  "author": {
    "name": "Johannes Ritter"
  },
  "license": "MIT",
  "keywords": [
    "perl",
    "debug",
    "debugger"
  ],
  "engines": {
    "vscode": "^1.64.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Nihilus118/vscode-perl-debug"
  },
  "bugs": {
    "url": "https://github.com/Nihilus118/vscode-perl-debug"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vscode/debugadapter": "^1.55.0-pre.1",
    "@vscode/debugadapter-testsupport": "^1.55.0-pre.1",
    "esbuild": "^0.14.21",
    "eslint": "^8.9.0",
    "typescript": "^4.5.5",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "await-notify": "^1.0.1"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebugResolve:perl",
    "onDebugDynamicConfigurations:perl"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "perl"
      }
    ],
    "debuggers": [
      {
        "type": "perl",
        "languages": [
          "perl"
        ],
        "label": "Perl Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a perl file.",
                "default": "${workspaceFolder}/${relativeFile}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "debug": {
                "type": "boolean",
                "description": "Enable or disable debugging.",
                "default": true
              },
              "cwd": {
                "type": "string",
                "description": "Set the current working directory for the perl process.",
                "default": "${workspaceFolder}"
              },
              "perlExecutable": {
                "type": "string",
                "description": "Path to perl executable."
              },
              "args": {
                "type": "array",
                "description": "Arguments passed at program launch.",
                "default": []
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "perl",
            "request": "launch",
            "name": "Perl Debug",
            "program": "${workspaceFolder}/${relativeFile}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Perl Debug",
            "description": "A new configuration for debugging a perl script.",
            "body": {
              "type": "perl",
              "request": "launch",
              "name": "Perl Debug",
              "program": "^\"\\${workspaceFolder}/\\${relativeFile}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  }
}
